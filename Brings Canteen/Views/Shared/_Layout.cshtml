
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Brings Canteen</title>
    

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    
</head>
<body>
    <div class="navbar navbar-fixed-top" id="nav">
        <div class="container" id="navbar-container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" id="navToggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Brings Canteen", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", id = "brandName" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    

                    <li>@Html.ActionLink("All Items", "All", "Home")</li>
                    <li>@Html.ActionLink("Categories", "Category", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p><button class="btn" id="themeBtn">Change Theme</button> | @Html.ActionLink("Contact us", "Contact", "Home", null, new { @class = "btn btn-link" }) | @Html.ActionLink("About", "About", "Home",null, new { @class = "btn btn-link" }) </p>
            <p>&copy; @DateTime.Now.Year - Brings Canteen</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/theme")

    @RenderSection("scripts", required: false)
</body>
</html>
